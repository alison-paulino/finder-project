<div id="topo-recrutador"></div>
<div class="textos-header">
  <h2>Olá, {{dadosList.name}}! Por favor, edite suas informações</h2>
</div>
<div id="edit-recruiter"></div>
<figure>
  <img src=" {{dadosList.imageUrl}} " alt="Minha Figura">
</figure>
<div>
  <form action="/editRecruiter/{{dadosList._id}}" method="post" enctype="multipart/form-data">
    <div id="form-edit-recruiter" class="form-group">
      <label for="name">Nome</label>
      <input type="text" name="name" id="name-recruiter" placeholder="Nome" value="{{dadosList.name}}"
        class="form-control">
      <label for="lastName">Sobrenome</label>
      <input type="text" name="lastName" id="last-recruiter" placeholder="Sobrenome" value="{{dadosList.lastName}}"
        class="form-control">
      <label for="city">Cidade</label>
      <input type="text" name="city" id="city-recruiter" placeholder="Cidade da Empresa" value="{{dadosList.city}}"
        class="form-control">
      <label for="phone">Telefone</label>
      <input type="text" name="phone" id="phone-recruiter" placeholder="Telefone" value="{{dadosList.phone}}"
        class="form-control">
      <label for="company">Empresa</label>
      <input type="text" name="company" id="company" placeholder="Empresa onde trabalha" value="{{dadosList.company}}"
        class="form-control">
      <label for="password">Password</label>
      <input type="password" name="password" id="password-recruiter" placeholder="********" / class="form-control">
      <label for="image-input">Imagem:</label>
      <input type="file" name="image" id="image-input" class="form-control-file" />
      <input type="text" name="existingImage" hidden id="" value="{{dadosList.imageUrl}}">
      <br>
      <button type="submit" id="button-update-recruiter" class="btn btn-primary">Salvar</button>
      <button id="button-back-profile-recruiter" class="btn btn-primary"> <a
          href="/profileRecruiter">Voltar</a></button>
    </div>
  </form>
  {{{formListRecruiter}}}
</div>
</div>

{{#if errorMessage}}
  <p class="error">{{errorMessage}}</p>
{{/if}}