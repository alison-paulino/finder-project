
  <h2>Login</h2>
  <p>Preencha os campos abaixo com seu e-mail e password!</p>
  <form action="/login" method="POST">
  <div id="form-login" class="form-group">
    <label for="email">E-mail</label>
    <input type="text" id="input-email" name="email" placeholder="Email" class="form-control"/>

    <label for="input-password">Password</label>
    <input type="password" name="password" id="input-password" placeholder="********" class="form-control"/>
    <br><br>
    <button type="submit" class="btn btn-primary">Entrar</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
    </div>
  </form>
