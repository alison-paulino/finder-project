<h1>Bem-vindo ao seu perfil {{name}}</h1>

<h2>Por favor, complete o seu cadastro</h2>

<form action="/createCandidate" method="POST">
  <label for="name">Nome</label>
  <input type="text" name="name" id="name-candidate" placeholder="Nome" value="{{name}}"><br>
  <label for="lastName">Sobrenome</label>
  <input type="text" name="lastName" id="lastName" placeholder="Sobrenome"><br>
  <label for="email">E-mail</label>
  <input type="text" name="email" id="email-candidate" placeholder="Email" value="{{email}}"><br>
  <label for="phone">Telefone</label>
  <input type="text" name="phone" id="phone" placeholder="Telefone"><br>
  <label for="city">Cidade</label>
  <input type="text" name="city" id="city" placeholder="Cidade"><br>
  <label for="skills">Skills - Descreva 05 (cinco) Skills</label>
  <input type="text" name="skills" id="skills" placeholder="Skills"><br>
  <label for="wage">Salário Base</label>
  <input type="text" name="wage" id="wage" placeholder="Salário Base"><br>
  <label for="input-password">Crie uma senha</label>
  <input type="password" name="password" id="input-password"><br>
  <button type="submit">Salvar</button>

</form>

{{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}


